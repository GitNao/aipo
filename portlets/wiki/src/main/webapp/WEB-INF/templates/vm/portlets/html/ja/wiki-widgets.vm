## ---------------------------------------------------------------------------
#set ($newUrl = $!utils.escapeXML($!jslink.getPortletById($!portlet.ID).addQueryData("template","WikiFormScreen").addQueryData("entityid","new")))
#set ($categoryUrl = $!utils.escapeXML($!jslink.getPortletById($!portlet.ID).addQueryData('template','WikiCategoryListScreen')))
#set ($fileterUrl = $!utils.escapeXML($!jslink.getPortletById($!portlet.ID).addQueryData("template","WikiListScreen").addQueryData("filter",$!record.CategoryId).addQueryData("filtertype","category").addQueryData('tab','list').addQueryData('reset_keyword_params','true')))
## ---------------------------------------------------------------------------
<div id="auiWidgetsArea">
    <div class="auiWidget clearfix widgetButton">
        <a title="$l10n.WIKI_WIKI_CREATE" href="javascript:void(0)" #if($!isCategory) class="auiButton"#else class="auiButtonAction"#end onclick="aipo.common.showDialog('$newUrl','$!portlet.ID',aipo.wiki.onLoadWikiDialog);">$l10n.WIKI_WIKI_CREATE</a>
    </div>
    <div id="subNavigation">
        <div class="auiWidget clearfix">
            <ul>
				#foreach($record in $!result.CategoryList )
                <li #if ($!result.issetFilter("category",$!record.CategoryId.toString())) class="active" #end><a href="javascript:void(0)" onclick="aipo.viewPage('$fileterUrl','$!portlet.ID');">$!record.CategoryName</a></li>
				#end
            </ul>
            <div style="margin:0.5em 0;">
                <a href="javascript:void(0)" onclick="aipo.viewPage('$categoryUrl', '$!portlet.ID')">${l10n.WIKI_MANAGEMENT}</a>
            </div>
        </div>
    </div>
</div>