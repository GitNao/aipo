## ---------------------------------------------------------------------------
#if  ("$!mode"=="new_form")
#set ($action_str = $l10n.WIKI_ADD)
#set ($subtitle = $l10n.WIKI_ADDITION)
#set ($event_submit = "eventSubmit_doWiki_insert")
#else
#set ($action_str = $l10n.WIKI_UPDATE)
#set ($subtitle = $l10n.WIKI_EDITION)
#set ($event_submit = "eventSubmit_doWiki_update")
#end
#set ($indicator_id = "indicator-dlg-")
## ---------------------------------------------------------------------------
## IE文字化け対策
<span id="wiki_val_switch1" style="display:none">$l10n.WIKI_TYPE_NEW_WORD</span>
<span id="wiki_val_switch2" style="display:none">$l10n.WIKI_SELECT_DATE_FROM_LIST</span>
## ---------------------------------------------------------------------------

#ALdialogheader($subtitle)
#ALajaxIndicator("$indicator_id" "$!portlet.ID" "")
	<div id="messageDiv"></div>
	<div id="messageDiv_$!portlet.ID"></div>
	#ALajaxscreenformheader("wikiForm" $jslink $portlet "WikiFormJSONScreen" "aimluck.io.createSelectFromFileList(this, '$!portlet.ID');aimluck.io.submit(this,'$indicator_id','$!portlet.ID',aipo.wiki.onReceiveMessage)")
		<input name="is_new_category" type="hidden" value="$!result.NewCategory"/>
        #if("$!mode"=="new_form")
        	<input type="hidden" name="mode" value="insert" />
        #else
        	<input type="hidden" name="mode" value="update" />
        #end
		#ALtableheaderWide()
		<tr>
        	#ALtdcaption("#ALrequired($!result.getFieldName('category_id'))")
        	#ALtditemheader()
        	<div id="wikiCategoryInputField" #if(!$!{result.NewCategory})style="display:none"#end>
        		#ALtextfieldw100('category_name' $!result.CategoryName 50 'active')
        	</div>
        	<div id="wikiCategorySelectField" #if($!{result.NewCategory})style="display:none"#end>
        		#ALselectpdheaderw100("category_id" "")
        		#foreach( $record in $result.CategoryList )
        			<option value='$!record.Id' #if ($!result.CategoryId.toString() == $!record.Id.toString()) selected="selected" #end>$!record.Name</option>
        		#end
        		#ALselectfooter()
        	</div>
        	<div class="mt5">
        		<input name="category_input_button" type="button" class="button" value=" #if(!$!{result.NewCategory})$l10n.WIKI_TYPE_NEW_WORD#else$l10n.WIKI_SELECT_DATE_FROM_LIST#end " onclick="aipo.wiki.formSwitchCategoryInput(this)" />
        	</div>
        	#ALtditemfooter()

        </tr>
        <tr>
            #ALtdcaption("#ALrequired($!result.getFieldName('name'))")
            #ALtditem("#ALtextfieldw100('name' $!result.Name 50 'active')")
        </tr>
        <tr>
            #ALtdcaption("#ALrequired($!result.getFieldName('note'))")
            #ALtditemheader()
            <div class="mb5">
                                <a onclick="aipo.wiki.bold()" href="javascript:void(0);"><span class="auiButtonIcon"><i class="icon-bold" ></i></span></a>
                                <a onclick="aipo.wiki.italic()" href="javascript:void(0);"><span class="auiButtonIcon"><i class="icon-italic"　></i></span></a>
                                <a onclick="aipo.wiki.underline()" href="javascript:void(0);" ><span class="auiButtonIcon"><i class="icon-underline"　></i></span></a>
                                <a onclick="aipo.wiki.strikethrough()" href="javascript:void(0);"><span class="auiButtonIcon"><i class="icon-strikethrough"　></i></span></a>
                                <a onclick="aipo.wiki.header()" href="javascript:void(0);"><span class="auiButtonIcon">h1</span></a>
                                <a onclick="aipo.wiki.headerTwo()" href="javascript:void(0);"><span class="auiButtonIcon">h2</span></a>
                                <a onclick="aipo.wiki.headerThree()" href="javascript:void(0);"><span class="auiButtonIcon">h3</span></a>
                                <a onclick="aipo.wiki.ulist()" href="javascript:void(0);"><span class="auiButtonIcon"><i class="icon-list-ul"></i></span></a>
                                <a onclick="aipo.wiki.olist()" href="javascript:void(0);"><span class="auiButtonIcon"><i class="icon-list-ol"></i></span></a>
                                <a onclick="aipo.wiki.externallink()" href="javascript:void(0);"><span class="auiButtonIcon"><i class="icon-external-link"></i></span></a>
								<a onclick="aipo.wiki.table()" href="javascript:void(0);"><span class="auiButtonIcon">$l10n.WIKI_TABLE</span></a>
								<a onclick="aipo.wiki.quote()" href="javascript:void(0);"><span class="auiButtonIcon">$l10n.WIKI_QUOTE</span></a>
								<a onclick="aipo.wiki.pre()" href="javascript:void(0);"><span class="auiButtonIcon">$l10n.WIKI_FORMATTED</span></a>
								<a onclick="aipo.wiki.hr()" href="javascript:void(0);"><span class="auiButtonIcon">$l10n.WIKI_HR</span></a>
			</div>

			<textarea id = "wiki_note"class="text wide" name="note" rows="10" cols="40">$!result.Note</textarea>
        </tr>
		<tr #if(!$result.isFileUploadable())class="mb_hide"#end>
        <td class="caption">$l10n.WIKI_FILE_ATTACH</td>
            <td>
              <div class="clearfix">
              <div>
              #IFFileUpload()
              </div>
              <ul id="attachments_$!{portlet.ID}" class="attachments">
                #foreach($record in $!result.AttachmentFileNameList )
                  <li data-fileid="s${record.FileId}" data-filename="$!{record.FileName}"><span>$!record.FileName</span><span class="deletebutton" onclick="aimluck.io.removeFileFromList(this.parentNode.parentNode,this.parentNode);">$l10n.DELETE</span></li>
                #end
              </ul>
              <input type="hidden" id="folderName_$!{portlet.ID}" name="folderName" value="$!result.FolderName" />
              </div>
            </td>
        </tr>
		#ALtablefooter()
		#ALbuttonheader()
			#ALsubmit($event_submit $action_str)
			#ALajaxbuttonClose()
        #ALbuttonfooter()
	#ALformfooter()
    </div>
    </div>
#ALdialogfooter()
