#AUIcontentsAreaHeader()

#AUISummaryDiv()
<form class="auiSearch">
	<input class="text floatLeft long" type="text" name="q" id="q" style="margin-right:5px;">
		<a class="auiButtonSearch" onclick="aimluck.io.setHiddenValue(this);">$l10n.WIKI_SEARCH</a>
</form>
#AUISummaryDivfooter()

#AUISummaryDiv()
<div class="floatLeft"><a href="#" class="auiButton">$l10n.WIKI_DELETE</a></div>
#AUIajaxpageview('WikiListScreen' $result)
#AUISummaryDivfooter()

<table class="auiRowTable auiMbTable wide">
	<colgroup span="3"></colgroup>
	<colgroup style="width: 9em;"></colgroup>
	<tbody>
		<tr>	
			<th class="auiMTCheck center"><input type="checkbox" /></th>
			<th>#ALajaxsort('wiki_name' $l10n.WIKI_TITLE $result 'WikiListScreen')</th>
			<th class="wName">#ALajaxsort('update_user' $l10n.WIKI_UPDATE_USER $result 'WikiListScreen')</th>
			#ALtdheadAtt("#ALajaxsort('update_date' $l10n.WIKI_UPDATE_DATE $result 'WikiListScreen')" "")
		</tr>
		#foreach ($record in $result.List)
		<tr>
			#ALtdcellheaderAtt('align="center" class="auiMTCheck"')
			<input name="check$!record.Id" type="checkbox" value="$!record.Id" /></td>
		    #ALtdcellfooter()
		    #ALtdcellheaderAtt('class="auiMTCaption"')
				<div>
					<a href="javascript:void(0);" onclick="aipo.common.showDialog('$!utils.escapeXML($!jslink.getPortletById($!portlet.ID).addQueryData("template","WikiDetailScreen").addQueryData("entityid",$record.Id))');" >$!record.NameHtml</a>
				</div>
			#ALtdcellfooter()
			<td><div>$!record.UpdateUser</div></td>
			<td>$!record.UpdateDate</td>
		</tr>
		#end
	</tbody>
</table>

#AUISummaryDiv()
#AUIajaxpageview('WikiListScreen' $result)

#AUISummaryDivfooter()

#AUIcontentsAreaFooter()
#parse("/portlets/html/ja/wiki-widgets.vm")
