 <div class="messageSummaryHead">
	<div class="inner">
		<a href="javascript:void(0)" onclick="aipo.common.showDialog('?template=MessageRoomFormScreen&entityid=new','Message',aipo.message.onLoadMessageRoomDialog);" class="auiButton w100">ルームを追加する</a>
	</div>
	<div class="inner">
		<form class="search">
			<input type="text" id="roomSearch" class="" onfocus="return true;" onblur="return true;"><label class="placeholder" for="roomSearch">ルーム検索</label>
			<button class="submit" title="検索"><i class="icon-search"></i></button>
		</form>
	</div>
</div>
#if($result.List.size() == 0)

#else
<ul class="messageSummary">
#foreach ($record in $result.List)
	<li id="messageRoom$!record.RoomId" #if("$!currentRoom" == "$!record.RoomId")class="active"#end>
		<a href="javascript:void(0)" onclick="aipo.message.selectRoom($!record.RoomId);">
			<span class="avatar">
			#if($!record.getRoomType().getValue() == "O")
			#if($!record.isHasPhoto())
				<img src="$!utils.escapeXML($jslink.getTemplate("FileuploadFacePhotoScreen").addQueryData("uid", $!record.UserId).addQueryData("t", "$!record.PhotoModified"))" alt="$!record.Name"  class="avatar_s"/>
			#else
				<img src="images/common/avatar_default3.png" alt="$!record.Name" class="avatar_s"/>
			#end
			#else
			#if($!record.isHasPhoto())
				<img src="themes/default/images/common/group_default.png" alt="$!record.Name" class="avatar_s"/>
			#else
				<img src="themes/default/images/common/group_default.png" alt="$!record.Name" class="avatar_s"/>
			#end
			#end
			</span>
			#if("$!record.UnreadCount" != "0")<div class="nrCount" id="messageRoomUnreadCount$!record.RoomId">$!record.UnreadCount</div>#end
			<span class="date">$!record.UpdateDate</span>
			<span class="name">$!record.Name</span>
			<span class="latest">$!record.LastMessage</span>
		</a>
	</li>
#end
</ul>
#end
<span id="messageTotalUnreadCountValue" style="display:none">$!result.TotalUnreadCount</span>
<span id="messageCurrentRoomValue" style="display:none">$!currentRoom</span>
