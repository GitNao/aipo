#else
#foreach ($record in $result.Detail.EntryList)
#if($record)
<div class="p clearfix">
<h3>${record.TitleDate}&nbsp;&nbsp;<a href="javascript:void(0);" onclick="aipo.common.showDialog('$!utils.escapeXML($!jslink.getPortletById($!portlet.ID).addQueryData("template","BlogDetailScreen").addQueryData('entityid',$record.EntryId))');">${record.Title}</a></h3>
${record.Note}
<div class="alignright spaceRight">
<a href="javascript:void(0);" onclick="aipo.viewPage('$!utils.escapeXML($!jslink.getPortletById($!portlet.ID).addQueryData("template","BlogEntryListScreen").addQueryData('eventSubmit_doBlog_entry_list_user','1').addQueryData('view_uid',${record.OwnerId}))', '$!portlet.ID');">${record.OwnerName}</a>
&nbsp;|&nbsp;&nbsp;コメント(#if(${record.CommentsNum} == 0) 0 #else ${record.CommentsNum} #end)&nbsp;&nbsp;|&nbsp;&nbsp;<a href="javascript:void(0);" onclick="aipo.common.showDialog('$!utils.escapeXML($!jslink.getPortletById($!portlet.ID).addQueryData("template","BlogDetailScreen").addQueryData('entityid',$record.EntryId))');">続きはこちら </a>
#if($result.isMatch($result.LoginUserId, $record.OwnerId.Value))
&nbsp;&nbsp;|&nbsp;&nbsp;<a href="javascript:void(0);" onclick="aipo.common.showDialog('$!utils.escapeXML($!jslink.getPortletById($!portlet.ID).addQueryData("template","BlogEntryFormScreen").addQueryData('eventSubmit_doBlog_entry_form','1').addQueryData('entityid',$record.EntryId))');">編集 </a>
#end
</div>
</div>
#end
