## ---------------------------------------------------------------------------
#set ($indicator_id = "indicator-dlg-")
## ---------------------------------------------------------------------------
<!-- Start Contents Area -->
#AUIcontentsAreaHeader()
<div class="auiSummaryMeta clearfix">
<form class="auiSearch" id="searchForm_$!{portlet.ID}" action="$!jslink.getPortletById($!portlet.ID)" onsubmit="aimluck.io.postViewPage(this, '$!{portlet.ID}', 'search-${indicator_id}'); return false;">
<input type="hidden" name="template" value="WorkflowAllListScreen"/>
<input class="text floatLeft" type="text" name="keyword" id="q$!{portlet.ID}" style="margin-right:5px;" value="$!result.targetKeyword"/>
<a class="auiButtonSearch floatLeft" onclick="dojo.byId('searchForm_$!{portlet.ID}').onsubmit();">検索</a>
</a>
</form>
<div class="floatLeft ml10" style="padding-top: 0.4em;">#ALajaxIndicator("search-${indicator_id}" "$!{portlet.ID}" "&nbsp;")</div>
</div>
#ALajaxIndicator("${indicator_id}" "$!{portlet.ID}" "")
<div id="listmessageDiv"></div>
#ALajaxlistformheader('Workflow')
#if($result.List.size() == 0)
<div class="message">指定された条件に該当する依頼はありません。</div>
#else
<div class="auiSummaryMeta clearfix">
#AUIajaxpageview('WorkflowAllListScreen' $result)
</div>
#AUIsearchresult($!result.targetKeyword.toString())
#AUIrowTableWide()
<tr>
#ALtdheadAtt("#ALajaxsort('request_name' '表題' $result 'WorkflowAllListScreen')" 'class=""')
#ALtdheadThin("#ALajaxsort('price' '金額' $result 'WorkflowAllListScreen')")
#ALtdheadThin("#ALajaxsort('create_date' '作成日時' $result 'WorkflowAllListScreen')")
#ALtdheadThin("最終閲覧者")
#ALtdheadThin("進歩")
</tr>
#foreach ($record in $result.List)
<tr>
#ALtdcellheader()
<div>
<a href="javascript:void(0);" onclick="aipo.common.showDialog('$!utils.escapeXML($!jslink.getPortletById($!portlet.ID).addQueryData("template","WorkflowAllDetailScreen").addQueryData("mode","detail").addQueryData("entityid",$record.RequestId).addQueryData("prvid",$record.RequestId))','$!portlet.ID',aipo.workflow.onFocusComment);">【$!record.CategoryName】#if($!record.RequestName != '') $!record.RequestName #end</a>
</div>
#ALtdcellfooter()
#ALtdcellAtt("$!{record.PriceStr}&nbsp;円" 'class="right" nowrap="nowrap"')
#ALtdcellAtt("$!record.CreateDateTime" 'class="center" nowrap="nowrap"')
#ALtdcellAtt("$!record.LastUpdateUser" 'class="left" nowrap="nowrap"')
#ALtdcellAtt("$!record.StateString" 'class="center" nowrap="nowrap"')
</tr>
#end
#AUItablefooter()
<div class="auiSummaryMeta clearfix">
#AUIajaxpageview('WorkflowAllListScreen' $result)
</div>
#end
#ALformfooter()
#AUIcontentsAreaFooter()
<!-- END Contents Area -->
#parse("/portlets/html/ja/workflow-widgets.vm")