## ---------------------------------------------------------------------------
#set ($indicator_id = "indicator-list-")
#set ($pages = $result.PagesNum)
#set ($currentPage = $result.CurrentPage)
#set ($nextPage = $cuttentPage + 1)
#set ($url = "$!utils.escapeXML($!jslink.getPortletById($!portlet.ID).addQueryData('template', 'TimelineUrlScreen'))")
#set ($timelineViewType = "list")
## ---------------------------------------------------------------------------
<div id="timelineOuter">
<input type="hidden" id="TimelineUserId" name="TimelineUserId" value="$result.UserId" />
<input type="hidden" id="TimelineUrl_$!{portlet.ID}" name="TimelineUrl_$!{portlet.ID}" value="$url" />
<input type="hidden" id="flag_$!{portlet.ID}" name="flag_$!{portlet.ID}" value="none" />
<input type="hidden" id="height_$!{portlet.ID}" name="flag_$!{portlet.ID}" value="$result.ContentHeight" />
<div id="inputField">
<div id="messageDiv_$!portlet.ID"></div>
#ALajaxscreenformheader("timelineForm" $jslink $portlet "TimelineJSONScreen" "aimluck.io.createSelectFromFileList(this, '$!portlet.ID');aipo.timeline.submit(this,'$indicator_id','$!portlet.ID',aipo.timeline.onReceiveMessage)")

<div class="tlInputMention" style="position:relative">
  <textarea class="elastic" id="note_$!{portlet.ID}" cols="10" name="note" rows="1" style="border-top-width: 0px; border-right-width: 0px; border-bottom-width: 0px; border-left-width: 0px; border-style: initial; border-color: initial; border-image: initial; height: 39px;" onkeyup="aipo.timeline.onKeyUp('$!{portlet.ID}', null, event);" onfocus="aipo.timeline.onFocus('$!{portlet.ID}')" onblur="aipo.timeline.onBlur('$!{portlet.ID}')"></textarea>
  <span class="guide" id="guide_$!{portlet.ID}" onclick="this.style.display='none';document.getElementById('note_$!{portlet.ID}').focus();" style="display: block; position:absolute; color: #999999; top:5px; left:5px">近況を共有しましょう</span>
</div>

<div class="clearfix tlInputClip" id="tlInputClip_$!{portlet.ID}">
</div>

<div class="tlInputControls clearfix">
  <div class="floatRight">
    <span id="getTimelinePortletId" style="display:none;">$!portlet.ID</span>
	<input type="submit" class="auiButtonAction" onclick="aipo.timeline.addText(dojo.byId('form$!portlet.ID'), '$!portlet.ID');aipo.timeline.addHiddenValue(dojo.byId('form$!portlet.ID'), 'mode', 'insert');aimluck.io.setHiddenValue(this);" value="投稿する" />
  </div>
  <div class="floatLeft mr10">
    #set($att_url = $!jslink.getPortletById($!portlet.ID).addQueryData("template","FileuploadFormScreen").addQueryData("mode","form"))
    <a href="javascript:void(0)" class="auiButtonBold" onclick="aipo.fileupload.openAttachment('$!utils.escapeXML($att_url)', '$!portlet.ID');"  name="add_attachment">ファイルの選択</a>
  </div>
    <ul id="attachments_$!{portlet.ID}" class="attachments">
      #foreach($record in $!result.AttachmentFileNameList )
      <li data-fileid="s${record.FileId}" data-filename="$!{record.FileName}"><span>$!record.FileName</span><span class="deletebutton" onclick="aimluck.io.removeFileFromList(this.parentNode.parentNode,this.parentNode);">削除</span></li>
      #end
    </ul>
    <div style="clear:both"></div>
  <input type="hidden" id="folderName_$!{portlet.ID}" name="folderName" value="$!result.FolderName" />
</div>
#ALformfooter()
</div>

<div id="newMessage" style="display:none; clear:both">
	<a href="javascript:void(0)" onclick="aipo.portletReload('timeline')">新しい投稿があります</a>
</div>

#if($result.List.size() == 0)
  <div id="message_$!{portlet.ID}" class="message" style="clear:both; min-height:750px">投稿はありません。</div>
#else
  #if($result.ContentHeight == 0)
    <div id="timeline_$!{portlet.ID}" class="timeline">
  #else
    <div id="timeline_$!{portlet.ID}" class="timeline" style="height: ${result.ContentHeight}px; overflow-y: scroll; overflow-x: hidden; clear:both" onScroll="dojo.byId('readHidden_$!{portlet.ID}').onclick()">
  #end
  <img src="images/common/dot.gif" width="1" height="1" onload="aipo.timeline.setScrollTop('$portlet.ID', '$result.ScrollTop');" style="display:none" />
  <div id="content_$!{portlet.ID}_1">
	#parse("/portlets/html/ja/ajax-timeline-content.vm")
  </div>
  #if(${pages} > 1)
    #foreach ($i in [2..${pages}])
	  <div id="content_$!{portlet.ID}_${i}"></div>
    #end
  #end
  <div id="more_$!{portlet.ID}">
  #if($result.ContentHeight == 0)
	#if($pages > $currentPage)
		<div class="readMore"><a href="javascript:void(0);" onclick="dojo.byId('readHidden_$!{portlet.ID}').onclick()" style="display:block;">もっと見る</a></div>
	#end
  #end
  <div id="more_end_$!{portlet.ID}"></div>
  </div>
  </div>
#end
</div>