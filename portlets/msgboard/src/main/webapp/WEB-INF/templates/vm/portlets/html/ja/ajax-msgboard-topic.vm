<div class="auiSummaryMeta clearfix">
<div class="floatLeft w30">
<form class="auiForm">
#ALselectpdheader("topic" "100%#if($result.TableColumNum != 4);display:none#end" "aipo.viewPage(this.options[this.selectedIndex].value, '$!portlet.ID')")
<option value="$!utils.escapeXML($!jslink.getPortletById($!portlet.ID).addQueryData("template","MsgboardTopicScreen").addQueryData("filter","0").addQueryData("filtertype","category"))">すべてのカテゴリ</option>
#foreach( $record in $result.CategoryList )
<option value="$!utils.escapeXML($!jslink.getPortletById($!portlet.ID).addQueryData("template","MsgboardTopicScreen").addQueryData("filter",$!record.CategoryId).addQueryData("filtertype","category"))" #if ($!result.CurrentFilter && $!result.CurrentFilter == $!record.CategoryId.toString()) selected="selected" #end>$!record.CategoryName</option>
#end
#ALselectfooter()
</form>
</div>
#if($result.List.size() != 0)
#AUIajaxpageview('MsgboardTopicScreen' $result)
#end
</div>

#if($result.List.size() == 0)
<div class="message">指定された条件に該当するトピックはありません。</div>
#else
#if($result.TableColumNum == 4)
#ALformheader('Msgboard' $jslink $portlet)
<table class="auiRowTable wide">
<colgroup />
<colgroup style="width:20%;" />
<colgroup style="width:20%;" />
<colgroup style="width:6em;" />
<tbody>
#foreach ($record in $result.List)
<tr>
#ALtdcellheader()
<div><a href="javascript:void(0);" onclick="aipo.common.showDialog('$!utils.escapeXML($!jslink.getPortletById($!portlet.ID).addQueryData("template","MsgboardTopicDetailScreen").addQueryData("entityid",$record.TopicId))', '$!portlet.ID', aipo.msgboard.onLoadMsgboardDetail);">$!record.TopicName #if($record.ReplyCount.toString() != "0")（$record.ReplyCount）#end</a>
#if($!record.CategoryId.toString() != "1" && ! $!record.Public)
<img src="images/msgboard/msgboard_secret.gif" border="0" width="16" height="16" alt="非公開" title="非公開" align="absmiddle"/>
#end</div>
#ALtdcellfooter()
#ALtdcellAtt("<div>$!record.CategoryName</div>" '')
#ALtdcellAtt("<div>$!record.OwnerName</div>" '')
#ALtdcellAtt("<div>$!record.UpdateDate</div>" 'class="right" nowrap="nowrap"')
</tr>
#end
</tbody>
</table>
#ALformfooter()
#else
#ALformheader('Msgboard' $jslink $portlet)
<table class="auiRowTable wide">
<colgroup />
<colgroup style="width:6em;" />
<tbody>
#foreach ($record in $result.List)
<tr>
#ALtdcellheader()
<div><a href="javascript:void(0);" onclick="aipo.common.showDialog('$!utils.escapeXML($!jslink.getPortletById($!portlet.ID).addQueryData("template","MsgboardTopicDetailScreen").addQueryData("entityid",$record.TopicId))', '$!portlet.ID', aipo.msgboard.onLoadMsgboardDetail);">$!record.TopicName #if($record.ReplyCount.toString() != "0")（$record.ReplyCount）#end</a>
#if($!record.CategoryId.toString() != "1" && ! $!record.Public)
<img src="images/msgboard/msgboard_secret.gif" border="0" width="16" height="16" alt="非公開" title="非公開" align="absmiddle"/>
#end</div>
#ALtdcellfooter()
#ALtdcellAtt("<div>$!record.UpdateDate</div>" 'class="right" nowrap="nowrap"')
</tr>
#end
</tbody>
</table>
#ALformfooter()
#end
#end
