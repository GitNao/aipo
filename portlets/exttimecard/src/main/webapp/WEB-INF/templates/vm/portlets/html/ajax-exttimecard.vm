## ---------------------------------------------------------------------------
#set ($indicator_id = "indicator-list-")
## ---------------------------------------------------------------------------
#ALajaxIndicator("$!indicator_id" "$!{portlet.ID}" "")
<div id="exttimecardmessageDiv"></div>
#ALajaxscreenformheader("exttimecardForm" $jslink $portlet "ExtTimecardFormJSONScreen" "aimluck.io.submit(this, '$!indicator_id','$!portlet.ID',aipo.exttimecard.onListReceiveMessage)")
#ALtableheaderAtt("wide")
<tr>

#if($!{result.Detail.IsTypeA}||$!{result.Detail.IsTypeH}||$!{result.Detail.IsTypeC})
<td nowrap="nowrap" class="w25 center">
<span class="auiButtonDisabled">出勤</span>
</td>
<td nowrap="nowrap" class="w25 center">
<span class="auiButtonDisabled">退勤</span>
</td>
<td nowrap="nowrap" class="w25 center">
<span class="auiButtonDisabled">外出</span>
</td>
<td nowrap="nowrap" class="w25 center">
<span class="auiButtonDisabled">復帰</span>
</td>
#else

#ALtdcellheaderAtt("nowrap='nowrap' class='w25 center'")
#if (!$!{result.Detail})
<input type="button" value="出勤" class="auiButtonAction" onclick="aipo.exttimecard.addHiddenValue(dojo.byId('form$!portlet.ID'), 'mode', 'punchin');aipo.exttimecard.addHiddenValue(dojo.byId('form$!portlet.ID'), 'punchin', '出勤');dojo.byId('form$!portlet.ID').onsubmit();"/>
#else

#if (!($!{result.Detail.IsNullClockInTime}))
出勤<br />$!{result.Detail.ClockInTime.Time}
#else
#if (!$!{result.Detail.IsNullClockOutTime})
<span class="auiButtonDisabled">出勤</span>
#else
<input type="button" value="出勤" class="auiButtonAction" onclick="aipo.exttimecard.addHiddenValue(dojo.byId('form$!portlet.ID'), 'mode', 'punchin');aipo.exttimecard.addHiddenValue(dojo.byId('form$!portlet.ID'), 'punchin', '出勤');dojo.byId('form$!portlet.ID').onsubmit();" />
#end
#end

#end

#ALtdcellfooter()

#ALtdcellheaderAtt("nowrap='nowrap' class='w25 center'")

#if ($!{result.Detail} && !($!{result.Detail.IsNullClockInTime})) ##出勤している
  #if ($!{result.Detail} && !($!{result.Detail.IsNullClockOutTime}))
    退勤<br />$!{result.Detail.ClockOutTime.Time}
  #else
    #if ($!{result.Detail.IsOutgoing}) ## 外出中である
      <span class="auiButtonDisabled">退勤</span>
    #else
      #if($!{result.Detail.IsOverTime})
        <input type="button" value="退勤" class="auiButtonAction" onclick="aipo.exttimecard.addHiddenValue(dojo.byId('form$!portlet.ID'), 'mode', 'punchout');aipo.exttimecard.addHiddenValue(dojo.byId('form$!portlet.ID'), 'punchout', '退勤');dojo.byId('form$!portlet.ID').onsubmit();"/>
      #else
        <input type="button" value="退勤" class="auiButtonBold" onclick="aipo.exttimecard.addHiddenValue(dojo.byId('form$!portlet.ID'), 'mode', 'punchout');aipo.exttimecard.addHiddenValue(dojo.byId('form$!portlet.ID'), 'punchout', '退勤');dojo.byId('form$!portlet.ID').onsubmit();"/>
      #end
    #end
  #end
#else
  <span class="auiButtonDisabled">退勤</span>
#end
#ALtdcellfooter()

#ALtdcellheaderAtt("nowrap='nowrap' class='w25 center'")
#if(!$!{result.Detail} || !($!{result.Detail.IsNullClockOutTime})) ## 出勤してない || 退勤後である
<span class="auiButtonDisabled">外出</span>
#else
#if($!{result.Detail.IsOutgoing}) ##外出中である
外出<br />$!{result.Detail.OutgoingTime.Time}
#else
<input type="button" value="外出" class="auiButtonBold" onclick="aipo.exttimecard.addHiddenValue(dojo.byId('form$!portlet.ID'), 'mode', 'outgoing');aipo.exttimecard.addHiddenValue(dojo.byId('form$!portlet.ID'), 'outgoing', '外出');dojo.byId('form$!portlet.ID').onsubmit();"/>
#end
#end
#ALtdcellfooter()

#ALtdcellheaderAtt("nowrap='nowrap' class='w25 center'")
#if(!$!{result.Detail} || !($!{result.Detail.IsNullClockOutTime}) || !($!{result.Detail.IsOutgoing}))## 出勤してない || 退勤後である || 外出中でない
<span class="auiButtonDisabled">復帰</span>
#else
<input type="button" value="復帰" class="auiButtonBold" onclick="aipo.exttimecard.addHiddenValue(dojo.byId('form$!portlet.ID'), 'mode', 'comeback');aipo.exttimecard.addHiddenValue(dojo.byId('form$!portlet.ID'), 'outgoing', '復帰');dojo.byId('form$!portlet.ID').onsubmit();"/>
#end

#ALtdcellfooter()
#end
</tr>
#ALtablefooter()
#ALformfooter()
