## ---------------------------------------------------------------------------
#if ($result.List.size() == 0)
<div class="message">アクティビティはありません。</div>
#else
#ALformheader('Activity' $jslink $portlet)
<table class="rowTable wide">
<tbody>
#foreach ($record in $result.List)
<tr #if(!$record.isRead()) style="background-color:#FFE5E5;" #end>
<td class="thin"><img src="images/icon/icon_add.gif" width="16" height="16"></td>
<td>
<span class="small">$!{record.DisplayName}&nbsp;$!{record.UpdateDate}</span><br/>
<a href="javascript:void(0);" onclick="dijit.byId('activitychecker')._closeDropDown();aipo.common.showDialog('$!{record.PopupUrl}&js_peid=$!{portlet.ID}', '$!{portlet.ID}', aipo.container.onPopupGadgets );aipo.container.gadgetService.requestCheckActivity(${record.Id})">$!record.TitleText</a>
</td>
</tr>
#end
</tbody></table>
#ALajaxpageviewFooter('ActivityAllScreen' $result)
#ALformfooter()
#end
