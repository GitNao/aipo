<div id="messageDiv"></div>
<div id="messageDiv_$!portlet.ID"></div>
<input type="hidden" name="mode" value="$!modesrv" />
#ALtableheaderWide()
#ALtdcaption("タイトル")
#ALtditem($!result.Detail.Name)
#ALtdcaption("作成者")
#ALtditem($!result.Detail.CreateUser.AliasName)
#ALtdcaption("作成日")
#ALtditem($!result.Detail.CreateDate)
#ALtdcaption("回答期日")
#ALtditem($!result.Detail.CloseDate)
#ALtdcaption("内容")
#ALtditem($!result.Detail.Comment)
#ALtdcaption("回答形式")
#if($!result.Detail.OptionType == "M")
	#ALtditem('複数選択')
#else	
	#ALtditem('1つだけ選択')
#end
#ALtdcaption("回答項目")
#ALtditemheader()
	<table class="w100">
        <tbody>
			#foreach ($map in $!result.Detail.Options.entrySet())
			<tr>
                <td>
                    <div class="p">$map.value</div>
                </td>
                <td nowrap="nowrap" class="right">
					#if($!result.Detail.AnonymousFlag.Value != "T")
						<div class="p"><a href="javascript:void(0)" onclick="popupToggle(this,'modalDialog_userlist1');popupToggle(this,'modalDialog_svdetail');">回答数：#if($!result.Detail.ResponseMap.get($map.key))$!{result.Detail.ResponseMap.get($map.key).size()}#else$zero#end</a></div>
					#else
						<div class="p">回答数：#if($!result.Detail.ResponseMap.get($map.key))$!{result.Detail.ResponseMap.get($map.key).size()}#else$zero#end</div>
					#end
				</td>
            </tr>
			#end
        </tbody>
	</table>
#ALtditemfooter()
#if($!result.Detail.RespondentType.Value == "M")
#ALtdcaption("回答対象者")
#ALtditemheader()
	<ul>
		#foreach($record in $!{result.Detail.Respondents})
		#if($velocityCount <= 5)<li>$!record.AliasName</li>#end
		#end
        <li><a href="javascript:void(0);" onclick="aipo.common.showDialog('$!utils.escapeXML($!jslink.getPortletById($!portlet.ID).addQueryData("template","SurveyRespondentDetailScreen").addQueryData("entityid",$!{result.Detail.SurveyId}).addQueryData("filter", 'A'))','$!portlet.ID');">…計$!{result.Detail.Respondents.size()}名</a></li>
    </ul>
#ALtditemfooter()
#end
#ALtdcaption("回答率")
#ALtditem($!result.Detail.ResponseRate)
#ALtdcaption("匿名回答")
#if($!result.Detail.AnonymousFlag.Value == "T")
	#ALtditem('匿名回答にする')
#else	
	#ALtditem('匿名回答にしない')
#end
#if($!result.Detail.RespondentType.Value == "M")
#ALtdcaption("未回答者")
#ALtditemheader()
	<ul>
		#foreach($record in $!{result.Detail.UnresponsedList})
			#if($velocityCount <= 5)<li>$!record.AliasName</li>#end
		#end
        <li><a href="javascript:void(0)" onclick="popupToggle(this,'modalDialog_userlist1');popupToggle(this,'modalDialog_svdetail');">…計$!{result.Detail.UnresponsedList.size()}名</a></li>
    </ul>
